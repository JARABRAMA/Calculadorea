<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/drakGray"
    android:theme="@style/Base.Theme.Calculadora"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvOperaciones"
        android:layout_width="360dp"
        android:layout_height="150dp"
        android:textSize="24sp"
        android:gravity="center_vertical"
        android:textColor="@color/white"
        android:background="@drawable/tv_operations"
        app:layout_constraintBottom_toTopOf="@+id/viewButtonBox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />


    <View
        android:id="@+id/viewButtonBox"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:background="@drawable/button_box"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"></View>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn7"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/number_button"
        android:text="7"
        app:layout_constraintTop_toTopOf="@+id/viewButtonBox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn8"
        tools:ignore="HardcodedText"
        app:layout_constraintBottom_toTopOf="@id/btn4"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn8"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/number_button"
        app:layout_constraintTop_toTopOf="@+id/viewButtonBox"
        android:text="8"
        app:layout_constraintStart_toEndOf="@+id/btn7"
        app:layout_constraintEnd_toStartOf="@+id/btn9"
        app:layout_constraintBottom_toTopOf="@id/btn5"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn9"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/number_button"
        app:layout_constraintTop_toTopOf="@+id/viewButtonBox"
        android:text="9"
        app:layout_constraintStart_toEndOf="@+id/btn8"
        app:layout_constraintEnd_toStartOf="@+id/btnDel"
        app:layout_constraintBottom_toTopOf="@id/btn6"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnDel"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/white_buttons"
        android:text="del"
        android:textAllCaps="true"
        app:layout_constraintTop_toTopOf="@id/viewButtonBox"
        app:layout_constraintStart_toEndOf="@+id/btn9"
        app:layout_constraintEnd_toStartOf="@+id/btnAc"
        app:layout_constraintBottom_toTopOf="@id/btnMultiplicacion"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnAc"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/white_buttons"
        android:text="AC"
        android:textAllCaps="true"
        app:layout_constraintTop_toTopOf="@id/viewButtonBox"
        app:layout_constraintStart_toEndOf="@+id/btnDel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnDivision"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/number_button"
        app:layout_constraintTop_toBottomOf="@+id/btn7"
        app:layout_constraintStart_toStartOf="parent"
        android:text="4"
        app:layout_constraintEnd_toStartOf="@+id/btn5"
        app:layout_constraintBottom_toTopOf="@id/btn1"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn5"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/number_button"
        android:text="5"
        app:layout_constraintTop_toBottomOf="@id/btn8"
        app:layout_constraintStart_toEndOf="@+id/btn4"
        app:layout_constraintEnd_toStartOf="@id/btn6"
        app:layout_constraintBottom_toTopOf="@id/btn2"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn6"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/number_button"
        android:text="6"
        app:layout_constraintStart_toEndOf="@+id/btn5"
        app:layout_constraintTop_toBottomOf="@+id/btn9"
        app:layout_constraintEnd_toStartOf="@+id/btnMultiplicacion"
        app:layout_constraintBottom_toTopOf="@+id/btn3"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnMultiplicacion"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/btnDel"
        app:layout_constraintStart_toEndOf="@id/btn6"
        android:background="@drawable/operation_button"
        android:text="ร"
        app:layout_constraintEnd_toStartOf="@+id/btnDivision"
        app:layout_constraintBottom_toTopOf="@id/btnSuma"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnDivision"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/btnAc"
        app:layout_constraintStart_toEndOf="@id/btnMultiplicacion"
        android:background="@drawable/operation_button"
        android:text="รท"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnResta"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/number_button"
        app:layout_constraintTop_toBottomOf="@+id/btn4"
        app:layout_constraintStart_toStartOf="parent"
        android:text="1"
        app:layout_constraintEnd_toStartOf="@+id/btn2"
        app:layout_constraintBottom_toTopOf="@id/btn0"

        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/number_button"
        android:text="2"
        app:layout_constraintTop_toBottomOf="@id/btn5"
        app:layout_constraintStart_toEndOf="@id/btn1"
        app:layout_constraintEnd_toStartOf="@id/btn3"
        app:layout_constraintBottom_toTopOf="@id/btn0"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/number_button"
        app:layout_constraintTop_toBottomOf="@id/btn6"
        app:layout_constraintStart_toEndOf="@id/btn2"
        android:text="3"
        app:layout_constraintEnd_toStartOf="@+id/btnSuma"
        app:layout_constraintBottom_toTopOf="@+id/btnComa"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSuma"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/operation_button"
        android:text="+"
        app:layout_constraintEnd_toStartOf="@+id/btnResta"
        app:layout_constraintStart_toEndOf="@id/btn3"
        app:layout_constraintTop_toBottomOf="@+id/btnMultiplicacion"
        app:layout_constraintBottom_toTopOf="@+id/btnAns"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnResta"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/btnDivision"
        app:layout_constraintStart_toEndOf="@id/btnSuma"
        android:background="@drawable/operation_button"
        android:text="-"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btnIgual"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn0"
        android:layout_width="128dp"
        android:layout_height="50dp"
        android:background="@drawable/number_button"
        android:text="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn1"
        app:layout_constraintEnd_toStartOf="@id/btnComa"
        app:layout_constraintBottom_toBottomOf="@+id/viewNumberButonBox"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnComa"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/number_button"
        app:layout_constraintTop_toBottomOf="@id/btn3"
        app:layout_constraintStart_toEndOf="@id/btn0"
        android:text=","
        app:layout_constraintEnd_toStartOf="@+id/btnAns"
        app:layout_constraintBottom_toBottomOf="@+id/viewNumberButonBox"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/btnAns"
        android:text="Ans"
        android:textAllCaps="true"
        android:background="@drawable/white_buttons"
        app:layout_constraintTop_toBottomOf="@+id/btnSuma"
        app:layout_constraintStart_toEndOf="@+id/btnComa"
        app:layout_constraintEnd_toEndOf="@id/btnIgual"
        app:layout_constraintBottom_toBottomOf="@+id/viewNumberButonBox"/>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/btnIgual"
        android:text="="
        android:background="@drawable/white_buttons"
        app:layout_constraintTop_toBottomOf="@+id/btnResta"
        app:layout_constraintStart_toEndOf="@+id/btnAns"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/viewNumberButonBox"/>
    <View
        android:id="@+id/viewNumberButonBox"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        app:layout_constraintTop_toTopOf="@+id/viewButtonBox"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>